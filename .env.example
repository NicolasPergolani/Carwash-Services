# Server Configuration
PORT=10000
NODE_ENV=production

# Gateway API URL for CORS (replace with your actual gateway URL)
GATEWAY_API_URL=https://your-gateway-api-domain.com

# MongoDB Configuration (replace with your MongoDB Atlas connection string)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/carwash_services?retryWrites=true&w=majority

# JWT Secret (generate a strong secret for production)
JWT_SECRET=your_super_secure_jwt_secret_here_with_at_least_32_characters

# Optional: Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100