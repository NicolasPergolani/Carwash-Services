# Environment variables template for Services API
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3002
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-domain.com

# Gateway API URL for CORS
GATEWAY_API_URL=https://your-gateway-api-domain.com

# Microservices URLs (for internal communication if needed)
USERS_API_URL=https://your-users-api-domain.com
APPOINTMENTS_API_URL=https://your-appointments-api-domain.com
SERVICES_API_URL=https://your-services-api-domain.com

# MongoDB Configuration
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# JWT Secret (generate a strong secret for production)
JWT_SECRET=your_super_secure_jwt_secret_here_with_at_least_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_here

# Admin registration secret
ADMIN_REGISTER_SECRET=your_admin_secret_here

